<div class="login-form">
  <div class="main-div">
    <div class="panel">
      <h1 class="form-heading">Login</h1>
      <p>Please enter your email and password</p>
    </div>
    <%= form_tag '/login',:id => "Login", :name => "Login" do %>
      <div class="form-group">
        <%= text_field_tag :email, nil, class: 'form-control', placeholder: "Email Address" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password,nil,class: 'form-control', placeholder: "Password" %>
      </div>
      <div class="forgot">
        <%= link_to "Regiser now", '/singup' %>
      </div>
      <button class="btn btn-primary" type="submit">Login</button>
    </form>
  </div>
</div>
<% end %>
